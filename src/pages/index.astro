---
const EMAIL = "you@example.com";
const INSTAGRAM_HANDLE = "yourhandle";
const INSTAGRAM_URL = `https://instagram.com/${INSTAGRAM_HANDLE}`;

---

<html lang="it">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio Architetto</title>
		<style>
			:root {
				color-scheme: light;
			}

			* {
				box-sizing: border-box;
			}

			html,
			body {
				margin: 0;
				padding: 0;
				background: #fff;
				color: #111;
				font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Arial,
					sans-serif;
				-webkit-font-smoothing: antialiased;
				text-rendering: optimizeLegibility;
			}

			main {
				min-height: 100dvh;
				display: grid;
				place-items: center;
				padding: 4rem 1.5rem;
			}

			.content {
				text-align: center;
				display: grid;
				gap: 1rem;
			}

			h1 {
				margin: 0;
				font-size: clamp(2rem, 7vw, 4rem);
				font-weight: 400;
				letter-spacing: 0.08em;
				text-transform: uppercase;
			}

			.links {
				display: inline-flex;
				gap: 1.25rem;
				justify-content: center;
				font-size: 0.95rem;
				letter-spacing: 0.05em;
			}

			a {
				color: inherit;
				text-decoration: none;
				border-bottom: 1px solid rgba(17, 17, 17, 0.25);
				transition: border-color 140ms ease, opacity 140ms ease;
			}

			a:hover {
				opacity: 0.7;
				border-bottom-color: rgba(17, 17, 17, 0.5);
			}
		</style>
	</head>
	<body>
		<main>
			<section class="content">
				<h1>Isidoro Pannitti</h1>
				<nav class="links" aria-label="Contatti">
					<a href={`mailto:${EMAIL}`}>{EMAIL}</a>
					<a href={INSTAGRAM_URL} target="_blank" rel="noreferrer noopener">
						Instagram
					</a>
				</nav>
			</section>
		</main>
	</body>
</html>
