---
import BaseLayout from "../../layouts/BaseLayout.astro";

const EMAIL = "isidoro.pannitti@gmail.com";
const INSTAGRAM_HANDLE = "@_isoradio";
const INSTAGRAM_URL = "https://www.instagram.com/_isoradio/";
---

<BaseLayout
	lang="en"
	section="info"
	title="isidoro pannitti architetto | info"
	description="Contact and short biography for Isidoro Pannitti."
>
	<section class="page-stack">
		<div class="info-block">
			<p>
				<a href={`mailto:${EMAIL}`}>{EMAIL}</a>
			</p>
			<p>
				<a href={INSTAGRAM_URL} target="_blank" rel="noreferrer noopener">{INSTAGRAM_HANDLE}</a>
			</p>
			<div class="bio">
				<p>Architect focused on domestic spatial studies and long-term material research.</p>
				<p>Based in Italy, available for commissions, collaborations, and editorial projects.</p>
			</div>
		</div>
	</section>
</BaseLayout>
