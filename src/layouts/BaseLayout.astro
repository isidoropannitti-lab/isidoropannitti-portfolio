---
import "../styles/global.css";

type Section = "architecture" | "photography" | "info";
type Lang = "it" | "en";

export interface Props {
	title: string;
	description: string;
	lang: Lang;
	section: Section;
}

const { title, description, lang, section } = Astro.props;

const navItems: { label: string; slug: Section }[] = [
	{ label: "architecture", slug: "architecture" },
	{ label: "photography", slug: "photography" },
	{ label: "info", slug: "info" },
];

const canonicalUrl = Astro.site
	? new URL(Astro.url.pathname, Astro.site).toString()
	: Astro.url.toString();
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="robots" content="index,follow" />
		<link rel="canonical" href={canonicalUrl} />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:site_name" content="isidoro pannitti architetto" />
		<meta property="og:locale" content={lang === "it" ? "it_IT" : "en_US"} />
	</head>
	<body>
		<header class="site-header">
			<a class="site-title" href={`/${lang}/architecture`}>isidoro pannitti architetto</a>
			<div class="header-right">
				<nav class="primary-nav" aria-label="Main navigation">
					{
						navItems.map((item) => (
							<a
								href={`/${lang}/${item.slug}`}
								class:list={{ "is-active": section === item.slug }}
								aria-current={section === item.slug ? "page" : undefined}
							>
								{item.label}
							</a>
						))
					}
				</nav>
				<p class="lang-switch" aria-label="language switch">
					<a
						href={`/${lang === "en" ? "it" : "en"}/${section}`}
						class:list={{ "is-active": lang === "it" }}
					>
						IT
					</a>
					<span>/</span>
					<a
						href={`/${lang === "it" ? "en" : "it"}/${section}`}
						class:list={{ "is-active": lang === "en" }}
					>
						EN
					</a>
				</p>
			</div>
		</header>
		<main class="page-shell">
			<slot />
		</main>
	</body>
</html>
